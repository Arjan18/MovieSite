<main class="main-content"> 
        <div class="container">
            <div class="page">
                <div class="content">
                    <div class="row">
                        <div class="col-md-6">
                            <figure class="movie-poster"><img src="../../public/TVimages/<%=posterFile %>" alt="#"></figure>
                        </div>
                        <div class="col-md-6">
                            <h2 class="movie-title"><%= name %></h2>
                            <div class="movie-summary">
                                <p><%= overview %></p>
                            </div>
                            <ul class="movie-meta">
                                <li><strong>Rating:</strong> 
                                    <div class="star-rating" title="Rated 4.00 out of 5"><span style="width:80%"><strong class="rating">4.00</strong> out of 5</span></div>
                                </li>
                                <li><strong>No of Seasons: </strong><%= seasons %> mins</li>
                                <li><strong>No of Episodes: </strong><%= episodes %> mins</li>
                                <li><strong>Released: </strong> <%= releaseYear %></li>
                                <li><strong>Genre: </strong><%= genre %></li>
                            </ul>

                            <ul class="starring">
                                <li><strong>Created By:</strong> <%= creator %></li>
                            </ul>
                        </div>
                    </div> 
                </div>
            </div>
        </div> 
    </main>



