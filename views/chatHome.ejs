		<div class="join-container">
			<header class="join-header">
				<h1><i class="fas fa-film"></i> Chat Room</h1>
			</header>
			<main class="join-main">
				<form action="/chat">
					<div class="form-control">
						<label for="username">Username</label>
						<input
							type="text"
							name="username"
							id="username"
							placeholder="Enter username..."
							required
							 value="<%= user.username %>" 
						/>
					</div>
					<div class="form-control">
						<label for="room">Room</label>
						<select name="room" id="room">
							<option value="Films">Films</option>
							<option value="TV">TV</option>
							<option value="Comedy Films">Comedy Films</option>
							<option value="New Releases">New Releases</option>
							<option value="Popular Films">Popular Films</option>
							<option value="Classics">Classics</option>
						</select>
					</div>
					<button type="submit" class="btn">Join Chat</button>
					<button class="btn" onclick="location.href='/homepage'" type="button">Return to Homepage</button>
				</form>
			</main>
		</div>

